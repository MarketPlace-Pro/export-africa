      'stat-number': document.querySelectorAll('[style*="fontSize: 2rem"]'),
      'category-card': document.querySelectorAll('[style*="categoryCard"]')
    };

    Object.keys(classMap).forEach(className => {
      const element = classMap[className];
      if (element) {
        if (typeof element.forEach === 'function') {
          element.forEach(el => el.classList.add(className));
        } else {
          element.classList.add(className);
        }
      }
    });
