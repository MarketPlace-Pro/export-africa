    }

    @media (min-width: 1024px) {
      .hero-title { 
        font-size: 4rem !important; 
      }
      
      .category-card:hover {
        transform: translateY(-5px) !important;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12) !important;
      }
    }

    /* Global image protection */
    img {
      max-width: 100% !important;
      height: auto !important;
      display: block !important;
    }
  `;
  document.head.appendChild(style);

  // Add classes for media queries
  setTimeout(() => {
    const classMap = {
      'hero-title': document.querySelector('[style*="fontSize: 2.5rem"]'),
      'search-wrapper': document.querySelector('[style*="flexDirection: column"]'),
      'search-input': document.querySelector('[style*="padding: 18px 20px"]'),
      'search-btn': document.querySelector('[style*="linear-gradient(45deg, #ff6b35, #ff8c42)"]'),
